<form action="/students/<%= @student.id %>" method="post">
  <label for="first-name">First Name</label><br>
  <input id="first-name" type="text" name="first_name" value="<%= @student.first_name %>">
  <hr>
  <label for="last-name">Last Name</label><br>
  <input id="last-name" type="text" name="last_name" value="<%= @student.last_name %>">
  <hr>
  <label for="age">Age</label><br>
  <input id="age" type="text" name="age" value="<%= @student.age %>">
  <hr>
  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select" name="house">
    <% houses=['Gryffindor','Hufflepuff','Ravenclaw','Slytherin']
    [1,2,3,4].each do |houseno| %>
      <option value="<%= houseno %>" <%= "selected" if @student.house_id == houseno %> ><%= houses[houseno-1] %></option>
    <% end %>
  </select>
  <hr>
  <input type="submit" value="Update student!">
</form>
